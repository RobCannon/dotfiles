[user]
	name = Rob Cannon
	email = rcannon@acceleratelearning.com
[credential]
    helper = /mnt/c/Program\\ Files/Git/mingw64/bin/git-credential-manager-core.exe
[fetch]
	prune = true
[push]
	default = simple
[init]
	defaultBranch = main
[help]
	autocorrect = 1
[pull]
	rebase = false
[core]
	editor = code --wait
[color]
        ui = true

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold

[color "status"]
        added = yellow
        changed = green
        untracked = red